-- Mail Widget

 function mailcount()
     os.execute("~/.config/awesome/unread.py > ~/.mailcount")
         local f = io.open("/home/morningstar/.mailcount")
         local l = nil
            if f ~= nil then
              l = f:read()
           else
              l = "?"
           end
            f:close()
           return " ‚å• " .. l
           end
mymail = wibox.widget.textbox( mailcount() )
mymail.timer = timer{timeout=5}
mymail.timer:connect_signal("timeout", function () mymail:set_text ( mailcount() ) end)
